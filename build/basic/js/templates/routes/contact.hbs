<div class="container">
  <div id="header">
  </div>
  <div id="content" class="row">
    <div class="span6 offset3 centered">
      <form>
        <fieldset>
          <legend>Send {{sitetitle.value}} A Message</legend>
          <label class="control-label" for="name">Your Name</label>
          <input type="text" id="name" name="name" placeholder="John Doe" class="span6" value="{{nameVal}}">
          <label class="control-label" for="email">Your Email</label>
          <input type="email" id="email" name="email" placeholder="john@doe.com" class="span6" value="{{emailVal}}">
          <label class="control-label" for="message">Your Message</label>
          <textarea id="message" name="message" placeholder="Your Message" rows="5" class="span6">{{messageVal}}</textarea>
          <div class="control-group">
            <div class="controls">
              <button type="submit" class="btn btn-success" data-loading-text="Sending...">Send</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
<div id="footer" class="bottom-menu">
</div>