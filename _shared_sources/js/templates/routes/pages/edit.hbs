<div class="container">
  <div id="header">
  </div>
  <div id="content" class="row">
    <form>
      <div class="span3 centered">
        {{#with page}}
        <fieldset>
          <legend>Title</legend>
          <input type="text" id="name" name="name" placeholder="Untitled Page" value="{{name}}">
        </fieldset>
        <fieldset>
          <legend>Visible To Public?</legend>
          <div class="switch switch-large"
            data-on-label="Yes"
            data-off-label="No">
            <input name="isPublished" {{#if isPublished}}checked="checked"{{/if}} type="checkbox" />
          </div>
        </fieldset>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn btn-success">Save</button>
            <a class="btn btn-danger">Delete</a>
          </div>
        </div>
        {{/with}}
      </div>
      <div class="span9">
        <fieldset>
          <div class="alert alert-info">
            Drag to sort media
          </div>
          <ul class="mediagrid sortable">
          {{#each media}}
            <li class="span4" data-uuid="{{id}}">
              <div class="relfix">
                <img src="{{thumbnailUrl}}" alt="{{name}}" class="img-polaroid" />
                <p class="absfix">
                  <a href="{{editHref}}" class="app btn btn-mini btn-info">Edit</a>
                </p>
              </div>
            </li>
          {{/each}}
          </ul>
        </fieldset>
      </div>
    </form>
  </div>
</div>
<div id="footer" class="bottom-menu">
</div>
