<div class="container">
  <div id="header">
  </div>
  <div id="content" class="row">
    <div class="span12 centered">
    <form>
      {{#with page}}
      <fieldset>
        <legend>Edit {{name}}</legend>
        <label class="control-label" for="name">Page Title</label>
        <input type="text" id="name" name="name" placeholder="Untitled Page" value="{{name}}">
        <div class="control-group">
          <label class="control-label" for="isPublished">Visible To Public?</label>
          <div class="switch switch-large"
            data-on-label="Yes"
            data-off-label="No">
            <input name="isPublished" {{#if isPublished}}checked="checked"{{/if}} type="checkbox" />
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn btn-success">Save</button>
            <a class="btn btn-danger">Delete</a>
          </div>
        </div>
      </fieldset>
      {{/with}}
      <fieldset>
        <legend>Sort Media</legend>
        <ul class="mediagrid sortable">
        {{#each media}}
          <li class="span4" data-uuid="{{id}}">
            <div class="relfix">
              <img src="{{thumbnailUrl}}" alt="{{name}}" class="img-polaroid" />
              <p class="absfix">
                <a href="{{editHref}}" class="app btn btn-mini btn-info">Edit</a>
              </p>
            </div>
          </li>
        {{/each}}
        </ul>
      </fieldset>
    </form>
    </div>
  </div>
</div>
<div id="footer" class="bottom-menu">
</div>
