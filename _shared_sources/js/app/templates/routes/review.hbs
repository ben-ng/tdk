<div class="container">
  <div id="header">
  </div>
  <div id="content" class="row">
    <div class="span12 centered">
      <table class="table">
        <thead>
          <tr>
            <th>File</th>
            <th colspan="2">Problem</th>
          </tr>
        </thead>
        <tbody>
          {{#each unprocessed}}
            <tr>
              <td><big>{{name}}</big></td>
              <td><big>{{reviewIssue}}</big></td>
              <td><a {{#unless @index}}id="firstFixButton"{{/unless}} href="{{editHref}}" class="app btn btn-info btn-mini">Fix It!</a></td>
            </tr>
          {{/each}}
          {{#if nothingToReview}}
            <tr>
              <td colspan="3">Nothing to review, good job!</td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="footer" class="bottom-menu">
</div>